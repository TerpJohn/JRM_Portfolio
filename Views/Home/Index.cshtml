        }

        //Show-Hide code function
        function ToggleCode(toggleCode, toggleButton) {
            let correctCode = document.getElementById(toggleCode);
            let correctBtn = document.getElementById(toggleButton);
            if (correctCode.style.display === "none") {
                correctCode.style.display = "block";
                correctBtn.innerHTML = "Hide Code";
            }
            else {
                correctCode.style.display = "none";
                correctBtn.innerHTML = "Show Code";
            }
        }

