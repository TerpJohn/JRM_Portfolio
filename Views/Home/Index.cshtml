        //FizzBuzz script
        function Evaluate1() {
            //Get input
            var array = [];
            var numFb1 = parseInt(document.getElementById("inputFb1").value);
            var numFb2 = parseInt(document.getElementById("inputFb2").value);

            //Validate input
            if (isNaN(numFb1) || isNaN(numFb2)) {
                alert("Please enter a number only");
                ClearInput3();
                return;

            }
            if (numFb1 >= 101 || numFb2 >= 101 || numFb1 <= 0 || numFb2 <= 0) {
                alert("Please enter a number between 1 and 100");
                ClearInput3();
                return;
            }

            //Evaluate for solution and display
            for (i = 1; i <= 100; i++) {
                if (i % numFb1 == 0 && i % numFb2 == 0) {
                    array.push("<b style='color: green;'>FizzBuzz</b>");
                }
                else if (i % numFb1 == 0 && i % numFb2 != 0) {
                    array.push("<b style='color: blue;'>Fizz</b>");
                }
                else if (i % numFb1 != 0 && i % numFb2 == 0) {
                    array.push("<b style='color: red;'>Buzz</b>");
                }
                else {
                    array.push("<b style='color: black;'>"+i+"</b>");
                }
            }
            document.getElementById("result").innerHTML = array.join(" , ");

        }

        //Clear input
        function ClearInput3() {
            document.getElementById("inputFb1").value = "";
            document.getElementById("inputFb2").value = "";
            document.getElementById("result").innerHTML = "";

        }

        //Palindrome script

        function Evaluate2() {

            //Get input and validate

            var word1 = document.getElementById("inputP").value;

            //Evaluate for solution and display

            var word2 = word1.toLowerCase();
            var rmvspc = word2.replace(/\s/g, '');
            var toArray = rmvspc.split('');
            var eval = toArray.reverse();
            if (eval.join('') === rmvspc) {
                answer.innerHTML = "Congratulations! Your word is a palindrome";
            } else {
                answer.innerHTML = "I'm sorry your word is not a palindrome";
            }

        }

        //Clear input
